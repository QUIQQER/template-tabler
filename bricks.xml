<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- promo slider wallpaper 2 content -->
        <brick control="\QUI\Tabler\Bricks\Card">
            <title>
                <locale group="quiqqer/bricks" var="brick.control.slider.title"/>
            </title>
            <description>
                <locale group="quiqqer/bricks" var="brick.control.slider.description"/>
            </description>

            <settings>
                <setting name="cardColWidth" type="select">
                    <locale group="quiqqer/template-tabler" var="cardColWidth"/>

                    <option value=""/>
                    <option value="col-4">
                        <locale group="quiqqer/template-tabler" var="col-4"/>
                    </option>
                    <option value="col-6">
                        <locale group="quiqqer/template-tabler" var="col-6"/>
                    </option>
                    <option value="col-8">
                        <locale group="quiqqer/template-tabler" var="col-8"/>
                    </option>
                    <option value="col-10">
                        <locale group="quiqqer/template-tabler" var="col-10"/>
                    </option>
                    <option value="col-12">
                        <locale group="quiqqer/template-tabler" var="col-12"/>
                    </option>
                </setting>

                <setting name="cardColWidthMobile">
                    <locale group="quiqqer/template-tabler" var="cardColMobileWidth"/>

                    <option value=""/>
                    <option value="col-sm-4">
                        <locale group="quiqqer/template-tabler" var="col-sm-4"/>
                    </option>
                    <option value="col-sm-6">
                        <locale group="quiqqer/template-tabler" var="col-sm-6"/>
                    </option>
                    <option value="col-sm-8">
                        <locale group="quiqqer/template-tabler" var="col-sm-8"/>
                    </option>
                    <option value="col-sm-10">
                        <locale group="quiqqer/template-tabler" var="col-sm-10"/>
                    </option>
                    <option value="col-sm-12">
                        <locale group="quiqqer/template-tabler" var="col-sm-12"/>
                    </option>
                </setting>
            </settings>
        </brick>


        <!-- defined areas in the template -->
        <templateAreas>
            <!-- global areas -->

            <areas>
                <area name="headerSuffix" inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-tabler"
                                var="area.headerSuffix.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tabler"
                                var="area.headerSuffix.description"
                        />
                    </description>
                </area>

                <area name="footerPrefix" inheritance="1" priority="5">
                    <title>
                        <locale group="quiqqer/template-tabler"
                                var="area.footerPrefix.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tabler"
                                var="area.footerPrefix.description"
                        />
                    </description>
                </area>

                <area name="footer" inheritance="1" priority="6">
                    <title>
                        <locale group="quiqqer/template-tabler"
                                var="area.footer.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tabler"
                                var="area.footer.description"
                        />
                    </description>
                </area>
            </areas>

            <!-- specific type areas -->
            <layouts>

                <layout layout="layout/noSidebar">
                    <area name="noSidebar">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.noSidebar.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.noSidebar.description"
                            />
                        </description>
                    </area>

                    <area name="prefixContentBricks" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.prefix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.prefix.content.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.suffix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.suffix.content.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/leftSidebar">
                    <area name="leftSidebar" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.left.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.left.description"
                            />
                        </description>
                    </area>

                    <area name="prefixContentBricks" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.prefix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.prefix.content.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.suffix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.suffix.content.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/rightSidebar">
                    <area name="rightSidebar" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.right.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.right.description"
                            />
                        </description>
                    </area>

                    <area name="prefixContentBricks" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.prefix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.prefix.content.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.suffix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tabler"
                                    var="area.sidebar.suffix.content.description"
                            />
                        </description>
                    </area>
                </layout>
            </layouts>
        </templateAreas>
    </bricks>

</quiqqer>
